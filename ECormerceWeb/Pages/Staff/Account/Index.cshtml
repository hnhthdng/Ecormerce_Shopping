@page
@model PizzaManagement.Pages.Staff.Account.IndexModel

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Account List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-page="create" class="btn btn-primary">
                <i class="bi bi-pencil-square"></i>
                &nbsp;Create new Account
            </a>
        </div>
    </div>
    <br /> <br />
    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>ID</th>
                <th>Email</th>
                <th>Username</th>
                <th>Full Name</th>
                <th>Phone Number</th>
                <th>Type</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var account in Model.Accounts)
            {
                <tr>
                    <td width="16.67%">@account.Id</td>
                    <td width="16.67%">@account.Email</td>
                    <td width="16.67%">@account.UserName</td>
                    <td width="16.67%">@account.FullName</td>
                    <th width="16.67%">@account.PhoneNumber</th>
                    <td width="16.67%">@GetAccountType(account.Type)</td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-page="edit" asp-route-id="@account.Id" class="btn btn-primary mx-2">
                                <i class="bi bi-pencil-square"></i>
                            </a>
                            <a asp-page="delete" asp-route-id="@account.Id" class="btn btn-danger mx-2">
                                <i class="bi bi-trash-fill"></i>
                            </a>
                        </div>
                    </td>
                </tr>
            }
    </table>
</div>


@functions {
    public string GetAccountType(int type)
    {
        return type == 1 ? "Staff" : "Normal User";
    }
}