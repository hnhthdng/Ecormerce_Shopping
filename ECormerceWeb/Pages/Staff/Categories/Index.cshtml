@page
@model PizzaManagement.Pages.Staff.Categories.IndexModel
@{
}
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Categories List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-page="create" class="btn btn-primary">
                <i class="bi bi-pencil-square"></i>
                &nbsp;Create new Category
            </a>
        </div>
    </div>
    <br /> <br />
    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Description</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in Model.Categories)
            {
                <tr>
                    <td width="20%">@category.CategoryID</td>
                    <td width="30%">@category.CategoryName</td>
                    <td width="50%">@category.Description</td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-page="ProductByCategory" asp-route-categoryId="@category.CategoryID" class="btn btn-success mx-2">
                                <i class="bi bi-eye"></i>
                            </a>
                            <a asp-page="edit" asp-route-id="@category.CategoryID" class="btn btn-primary mx-2">
                                <i class="bi bi-pencil-square"></i>
                            </a>
                            <a asp-page="delete" asp-route-id="@category.CategoryID" class="btn btn-danger mx-2">
                                <i class="bi bi-trash-fill"></i>
                            </a>
                        </div>
                    </td>
                </tr>
            }
    </table>
</div>
